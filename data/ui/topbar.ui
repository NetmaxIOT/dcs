<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.10"/>
  <template class="DcsgTopbar" parent="GtkStack">
    <property name="visible">True</property>
    <property name="transition-type">crossfade</property>
    <property name="transition-duration">400</property>

    <!-- Application -->
    <child>
      <object class="DcsgApplicationToolbar" id="application_toolbar">
      </object>

      <packing>
        <property name="name">application</property>
      </packing>
    </child>

    <!-- Loader -->
    <child>
      <object class="DcsgLoaderToolbar" id="loader_toolbar">
        <property name="visible">True</property>
        <property name="show-close-button">True</property>
      </object>

      <packing>
        <property name="name">loader</property>
      </packing>
    </child>

    <!-- Configuration -->
    <child>
      <object class="DcsgConfigurationToolbar" id="configuration_toolbar">
        <property name="visible">True</property>
        <property name="show-close-button">True</property>
      </object>

      <packing>
        <property name="name">configuration</property>
      </packing>
    </child>

    <!-- CSV Export -->
    <child>
      <object class="DcsgCsvExportToolbar" id="export_toolbar">
        <property name="visible">True</property>
        <property name="show-close-button">True</property>
      </object>

      <packing>
        <property name="name">export</property>
      </packing>
    </child>

    <!-- Settings -->
    <child>
      <object class="DcsgSettingsToolbar" id="settings_toolbar">
        <property name="visible">True</property>
        <property name="show-close-button">True</property>
      </object>

      <packing>
        <property name="name">settings</property>
      </packing>
    </child>
  </template>

</interface>
