# --enable-pid-loop=yes/no
AC_ARG_ENABLE([pid-loop],
              [AS_HELP_STRING([--enable-pid-loop=@<:@yes/no@:>@],
                              [Build a control loop that uses PID feedback.])],
              [enable_pid_loop=$enableval],
              [enable_pid_loop=yes])

# for if ENABLE_PID_LOOP in Makefile.am
AM_CONDITIONAL(ENABLE_PID_LOOP, test x$enable_pid_loop != xno)

# Ensure our makefile is generated by autoconf
AC_CONFIG_FILES([src/loops/pid/Makefile])
